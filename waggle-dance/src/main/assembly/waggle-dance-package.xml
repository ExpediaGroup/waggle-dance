<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>bin</id>
  <formats>
    <format>tgz</format>
  </formats>
  <baseDirectory>waggle-dance-${project.version}</baseDirectory>
  <files>
    <file>
      <source>src/main/service/waggle-dance.conf</source>
      <outputDirectory>service</outputDirectory>
      <destName>waggle-dance-core-latest-exec.conf</destName>
      <fileMode>644</fileMode>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>service</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}-latest${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>com.hotels:waggle-dance-core</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/scripts</directory>
      <outputDirectory>bin</outputDirectory>
      <filtered>false</filtered>
      <fileMode>744</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>conf</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>..</directory>
      <outputDirectory></outputDirectory>
      <filtered>false</filtered>
      <fileMode>644</fileMode>
      <includes>
        <include>LICENSE.txt</include>
        <include>README.md</include>
        <include>CHANGELOG.md</include>
        <include>logo.png</include>
        <include>system-diagram.png</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>